<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/shared_element</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:editTextColor">#295055</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionBar.userDetails">
        <item name="android:windowEnterTransition">@transition/user_details_</item>
        <item name="android:windowReturnTransition">@transition/user_details_</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="vertical_separator">
        <item name="android:layout_width">0.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_between_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_content</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
    <style name="horizontal_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="statistic_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/margin_content</item>
        <item name="android:paddingTop">@dimen/margin_content</item>
        <item name="android:paddingStart">@dimen/margin_between_content</item>
        <item name="android:paddingEnd">@dimen/margin_between_content</item>
    </style>

    <style name="info_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/margin_content</item>
        <item name="android:drawablePadding">@dimen/margin_content</item>
    </style>


</resources>
